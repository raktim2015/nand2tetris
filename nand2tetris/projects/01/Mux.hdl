/**
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=selnot);
    And(a=b, b=sel, out=op1);
    And(a=a, b=selnot, out=op2);
    Or(a=op1, b=op2, out=out);
}
